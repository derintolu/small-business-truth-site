---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "You follow the rules. They write them. The data every small business owner needs to see." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700;800;900&family=Newsreader:ital,wght@0,400;0,500;0,600;1,400&family=IBM+Plex+Mono:wght@500;600&display=swap" rel="stylesheet" />
    
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-white text-slate-900 overflow-x-hidden">
    <slot />
  </body>
</html>

<style is:global>
  .font-display { font-family: 'Outfit', system-ui, sans-serif; }
  .font-body { font-family: 'Newsreader', Georgia, serif; }
  .font-mono { font-family: 'IBM Plex Mono', monospace; }
  
  .stat-huge {
    font-size: clamp(3rem, 9vw, 5.5rem);
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.02em;
  }
  
  .stat-large {
    font-size: clamp(2.25rem, 7vw, 4rem);
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.02em;
  }
  
  .card {
    background: white;
    border: 1px solid #e2e8f0;
    border-radius: 16px;
    transition: all 0.2s ease;
  }
  
  .card:hover {
    box-shadow: 0 20px 40px -12px rgba(0, 0, 0, 0.08);
    transform: translateY(-2px);
  }
  
  .card-dark {
    background: #141e33;
    border: 1px solid rgba(255,255,255,0.1);
    border-radius: 16px;
  }
  
  .bar-track {
    height: 14px;
    border-radius: 7px;
    background: #f1f5f9;
    overflow: hidden;
  }
  
  .bar-fill {
    height: 100%;
    border-radius: 7px;
  }
  
  .bar-red { background: linear-gradient(90deg, #dc2626 0%, #ef4444 100%); }
  .bar-blue { background: linear-gradient(90deg, #2563eb 0%, #3b82f6 100%); }
  .bar-green { background: linear-gradient(90deg, #16a34a 0%, #22c55e 100%); }
  
  .btn-primary {
    background: #dc2626;
    color: white;
    font-weight: 600;
    border-radius: 12px;
    transition: all 0.2s ease;
  }
  
  .btn-primary:hover {
    background: #b91c1c;
    transform: translateY(-1px);
    box-shadow: 0 8px 24px rgba(220, 38, 38, 0.25);
  }
  
  .tag {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: rgba(220, 38, 38, 0.08);
    border-radius: 100px;
    font-size: 15px;
    font-weight: 600;
    color: #dc2626;
  }
  
  .tag-dark {
    background: rgba(255,255,255,0.1);
    color: white;
  }
  
  .section-line {
    width: 64px;
    height: 4px;
    border-radius: 2px;
  }
  
  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fadeUp { animation: fadeUp 0.7s ease forwards; }
  .delay-1 { animation-delay: 0.1s; }
  .delay-2 { animation-delay: 0.2s; }
  .delay-3 { animation-delay: 0.3s; }
</style>
